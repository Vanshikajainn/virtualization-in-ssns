//sensor connection code

#include <LiquidCrystal_I2C.h>
#include <DHT.h>


#define DHTPIN D4      
#define DHTTYPE DHT11 

DHT dht(DHTPIN, DHTTYPE);
LiquidCrystal_I2C lcd(0x27, 16, 2);

void setup() {
  Serial.begin(9600);
  dht.begin();
  lcd.init();                      
  lcd.backlight();               
  lcd.setCursor(0, 0);            
  lcd.print("Temp:       C");
  lcd.setCursor(0, 1);            
  lcd.print("Humidity:    %");
}

void loop() {
  
  float temp = dht.readTemperature();

  float humidity = dht.readHumidity();


  if (isnan(temp) || isnan(humidity)) {
    Serial.println("Failed to read from DHT sensor!");
    return;
  }

  Serial.print("Temperature: ");
  Serial.print(temp);
  Serial.print("Â°C ");
  Serial.print("Humidity: ");
  Serial.print(humidity);
  Serial.println("%");


  lcd.setCursor(7, 0); 
  if(temp >= 0 && temp <= 100) {
    lcd.print(" ");  
  }
  lcd.print(temp);


  lcd.setCursor(10, 1); 
  if(humidity >= 0 && humidity <= 100) {
    lcd.print(" "); 
  }
  lcd.print(humidity);

  delay(2000);
}
